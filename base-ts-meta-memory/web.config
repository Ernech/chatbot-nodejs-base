<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="app.ts" verb="*" modules="iisnode" resourceType="Unspecified" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="app.ts" />
        </rule>
      </rules>
    </rewrite>
    <iisnode watchedFiles="web.config;app.ts" />
  </system.webServer>
</configuration>